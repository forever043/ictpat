{% extends "common/mgrbase.html" %}
{% load staticfiles %}

{% block main_content %}
			
			<!-- Page Head -->
			<h2>专利申请登记</h2>
			<p id="page-intro">使用普通模式登记单个专利申请，或使用高级模式批量登记专利申请</p>


			<!-- Start Notifications -->
			{% include 'common/notifymsg.html' %}
			<!-- End Notifications -->

			<div class="content-box"><!-- Start Content Box -->
				
				<div class="content-box-header">
					
					<h3>专利信息</h3>
					<ul class="content-box-tabs">
						<li><a href="#tab1"{% if not batchmode %} class="default-tab" {% endif %}>普通模式</a></li>
						<li><a href="#tab2"{% if batchmode %} class="default-tab" {% endif %}>高级模式</a></li>
					</ul>

					<div class="clear"></div>
					
				</div> <!-- End .content-box-header -->
				
				<div class="content-box-content">

					<div class="tab-content{% if not batchmode %} default-tab{% endif %}" id="tab1" >
					
						<form action="{% url "patent-add" %}" method="post">

							{% csrf_token %}
							
							<fieldset>
								
								<p>
									<label>
										{{ form.basic.name.label }}*
										{% if form.basic.name.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.name }}
								</p>
								
								<p>
									<label>
										{{ form.basic.inventors.label }}*
										{% if form.basic.inventors.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.inventors }}
									<br />
									<small>多个发明人使用全角分号"；"分隔</small>
								</p>

								<p>
									<label>
									{{ form.basic.department.label }}*
									{% if form.basic.department.errors %}
									<span class="input-notification error png_bg"></span>
									{% endif %}
									{{ form.basic.department }}
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

									{{ form.basic.type.label }}*
									{% if form.basic.type.errors %}
									<span class="input-notification error png_bg"></span>
									{% endif %}
									{{ form.basic.type }}
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

									{{ form.basic.state.label }}*
									{% if form.basic.state.errors %}
									<span class="input-notification error png_bg"></span>
									{% endif %}
									{{ form.basic.state }}

									</label>
								</p>

							</fieldset>

							<fieldset class="column-left">

								<p>
									<label>
										{{ form.basic.apply_code.label }}*
										{% if form.basic.apply_code.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.apply_code }}
								</p>

							</fieldset>

							<fieldset class="column-right">

								<p>
									<label>
										{{ form.basic.apply_date.label }}*
										{% if form.basic.apply_date.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.apply_date }}
								</p>
								
							</fieldset>

							<fieldset>

								<p>
									<label>
										{{ form.basic.apply_file.label }}*
										{% if form.basic.apply_file.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
										{{ form.basic.apply_file }}
									</label>
								</p>

							</fieldset>

							<fieldset class="column-left">

								<p>
									<label>
										{{ form.basic.authorize_code.label }}
										{% if form.basic.authorize_code.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.authorize_code }}
								</p>

							</fieldset>

							<fieldset class="column-right">

								<p>
									<label>
										{{ form.basic.authorize_date.label }}
										{% if form.basic.authorize_date.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
									</label>
									{{ form.basic.authorize_date }}
								</p>

							</fieldset>

							<fieldset>

								<p>
									<label>
										{{ form.basic.apply_file.label }}
										{% if form.basic.authorize_file.errors %}
										<span class="input-notification error png_bg"></span>
										{% endif %}
										{{ form.basic.apply_file }}
									</label>
								</p>

							</fieldset>

							
							<div class="clear"></div><!-- End .clear -->

							<p>
								<input class="button" type="submit" name="basic_submit" value="提交" />
							</p>
					
						</form>
					</div> <!-- End #tab1 -->

					<div class="tab-content{% if batchmode %} default-tab{% endif %}" id="tab2" >

						<form action="{% url "patent-add" %}" method="post">

							{% csrf_token %}
							
							<fieldset>
								
								<p>
									<small>说明</small>
									{{ form.batch.content }}
								</p>

							</fieldset>

							<div class="clear"></div><!-- End .clear -->

							<p>
								<input class="button" type="submit" name="batch_submit" value="提交" />
							</p>

						</form>
						
					</div> <!-- End #tab2 -->	
					
				</div> <!-- End .content-box-content -->
				
			</div> <!-- End .content-box -->
						
{% endblock %}

